<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_goodscenter_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/tv_goodscenter_title"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="商品名称"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="售价"/>
            <TextView
                android:id="@+id/tv_goodscenter_price_out"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="¥580"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="利润"/>
            <TextView
                android:id="@+id/tv_goodscenter_profit"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="¥580"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="进价"/>
            <TextView
                android:id="@+id/tv_goodscenter_price_in"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="¥580"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_goodscenter_shoucang"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/textview_collection_unc"
                android:text="收藏"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_goodscenter_goodsIn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/textview_goodsin_unc"
                android:text="进货"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_goodscenter_getInshop"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/textview_getinshop_unc"
                android:text="加入店铺"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
