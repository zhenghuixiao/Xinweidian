<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_orderdown_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_orderdown_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_orderdown_title"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:lines="2"
                android:paddingTop="5dp"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textSize="16sp"
                        android:text="规格: "
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/tv_orderdown_format"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textSize="16sp"
                        android:text="A6601"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="进价: "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/tv_orderdown_inprice"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="￥34.50"
                        android:textSize="16sp"
                        android:textColor="@color/red"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/tv_orderdown_num"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:text="×1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/textview_yuan"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black_light"/>
</LinearLayout>
