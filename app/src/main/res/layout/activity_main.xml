<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.xinkaishi.apple.xinweidian.Activity.MainActivity">

    <TextView
        android:id="@+id/tv_toGoodscenter"
        android:text="跳转到货源中心"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@color/black_light">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cho_lab_dri_1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cho_nav_sho"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@color/red"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_main_login"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main"
        android:text="登入"/>
    <TextView
        android:id="@+id/tv_main_get"
        android:layout_toRightOf="@+id/tv_main_login"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/red"
        android:layout_alignParentBottom="true"
        android:text="登入"/>

</RelativeLayout>
