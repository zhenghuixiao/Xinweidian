<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xinkaishi.apple.xinweidian.Goods_detailActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/detail_viewpager"
                android:layout_width="fill_parent"
                android:layout_height="300dp"/>
            <LinearLayout
                android:id="@+id/ll_detailgoods_dot"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true">
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black_light"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goodsdetail_title"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="九阳（joyoung）DJ13B-C03SG 智能多功能豆浆机"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="销量:"/>
                    <TextView
                        android:id="@+id/tv_goodsdetail_saleNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏:"/>
                    <TextView
                        android:id="@+id/tv_goodsdetail_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="144"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="官方库存:"/>
                    <TextView
                        android:id="@+id/tv_goodsdetail_inventory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="333"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="进价:"/>
                    <TextView
                        android:id="@+id/tv_goodsdetail_price_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="88"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="售价:"/>
                    <TextView
                        android:id="@+id/tv_goodsdetail_price_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="利润:"/>
                    <TextView
                        android:id="@+id/tv_goodsdetail_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="333"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black_light"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="选择商品型号尺寸"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/abc_btn_radio_to_on_mtrl_000"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black_light"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="-----------------------"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="商品介绍"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="-----------------------"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_detailgoods_down"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收藏"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="|"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="加入购物车"/>
    </LinearLayout>
    <View
        android:layout_above="@+id/ll_detailgoods_down"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
</RelativeLayout>
