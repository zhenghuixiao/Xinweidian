<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.xinkaishi.apple.xinweidian.Activity.Add_addressActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人地址"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/sp_add_address_sheng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/sp_add_address_shi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <Spinner
            android:id="@+id/sp_add_address_qu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/et_add_address_detail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:lines="1"
                android:textColor="@color/black"
                android:background="@drawable/edit_biankuang_mouse"/>
            <TextView
                android:id="@+id/tv_add_address_detail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:textSize="18sp"
                android:text="详细地址（无需填写省、市、区）"
                android:gravity="center_vertical"
                android:background="@drawable/edit_biankuang_mouse"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="收货人信息"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/et_add_address_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:lines="1"
                android:textColor="@color/black"
                android:background="@drawable/edit_biankuang_mouse"/>
            <TextView
                android:id="@+id/tv_add_address_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:textSize="18sp"
                android:text="收货人姓名"
                android:gravity="center_vertical"
                android:background="@drawable/edit_biankuang_mouse"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/et_add_address_phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:lines="1"
                android:textColor="@color/black"
                android:background="@drawable/edit_biankuang_mouse"/>
            <TextView
                android:id="@+id/tv_add_address_phone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:textSize="18sp"
                android:text="收货人手机"
                android:gravity="center_vertical"
                android:background="@drawable/edit_biankuang_mouse"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
