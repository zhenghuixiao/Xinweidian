<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black_light"/>
    <LinearLayout
        android:id="@+id/ll_orderchild_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/iv_orderchild_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white" />
            <TextView
                android:id="@+id/tv_orderchild_image_state"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:text="已发货"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@color/order_alpha"/>
            <ImageView
                android:id="@+id/iv_orderchild_image_back"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:src="@mipmap/ord_btn_ref"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_orderchild_title"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="商品名称"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="订单号："
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_orderchild_orderid"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="11111111111111"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="规格："
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_orderchild_format"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="A6601"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 状态栏 -->
    <LinearLayout
        android:id="@+id/ll_orderchild_state"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:clickable="false">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/pay_btn_cbb"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black_light"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费："
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_orderchild_express_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥15.00"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp">
                <TextView
                    android:id="@+id/tv_orderchild_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共3件商品，总价（含运费）"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_orderchild_allprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥150.00"
                    android:textSize="14sp"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black_light"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态: "
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_orderchild_statetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未支付"
                    android:textColor="@color/red"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp">
                <TextView
                    android:id="@+id/tv_orderchild_button2"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="关闭订单"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_biankuang_red"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_orderchild_button1"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="继续支付"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_biankuang_maincolor"
                    android:textSize="15sp"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/black_light"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
