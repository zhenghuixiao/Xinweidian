<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black_light"/>
    <LinearLayout
        android:id="@+id/ll_orderchild_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_shoppingcart_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/black_light" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_goodscenter_title"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="商品名称"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="订单号："
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_shoppingcart_format"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="11111111111111"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="规格："
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_shoppingcart_inprice"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="A6601"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 状态栏 -->
    <LinearLayout
        android:id="@+id/ll_orderchild_state"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:clickable="false">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_btn_check_to_on_mtrl_000"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black_light"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费："
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥150.00"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共3件商品，总价（含运费）"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥150.00"
                    android:textSize="18sp"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black_light"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <!-- 子状态栏 未支付-->
            <RelativeLayout
                android:id="@+id/rl_orderchild_unpay"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态："
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未支付"
                        android:textColor="@color/red"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="关闭订单"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textview_biankuang_red"
                        android:layout_marginRight="10dp"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="继续支付"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textview_biankuang_maincolor"
                        android:textSize="15sp"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_light"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <!-- 子状态栏 等待发货（未发货）-->
            <RelativeLayout
                android:id="@+id/rl_orderchild_untake"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态："
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等待发货"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="提醒发货"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textview_biankuang_maincolor"
                        android:textSize="15sp"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_light"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <!-- 子状态栏 已发货 未取货-->
            <RelativeLayout
                android:id="@+id/rl_orderchild_unget"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态："
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已发货"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="查看物流"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textview_biankuang_maincolor"
                        android:textSize="15sp"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_light"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <!-- 子状态栏 已退款-->
            <RelativeLayout
                android:id="@+id/rl_orderchild_moneyback"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态："
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已退款"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="退款详情"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textview_biankuang_red"
                        android:textSize="15sp"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_light"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <!-- 子状态栏 已关闭-->
            <RelativeLayout
                android:id="@+id/rl_orderchild_close"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态："
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已关闭"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="删除订单"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textview_biankuang_red"
                        android:textSize="15sp"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_light"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <!-- 子状态栏 交易成功-->
            <RelativeLayout
                android:id="@+id/rl_orderchild_success"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态："
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交易成功"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="订单详情"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/textview_biankuang_maincolor"
                        android:textSize="15sp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
